#include<stdio.h>

int main()
{
	int n,i,div,sum =0;
	printf("Enter :");
	scanf("%d",&n);
	for(i=1;i<n;i++)
	{
	    if(n%i==0)
	    {
	    	div =i ;
	    	printf("div = %d\n",div);
	    sum = sum +div;
	    	printf("i = %d\n",i);
	    printf("sum = %d\n",sum);
		}
	}
	
    printf("Hence %d is a perfect number",n);
}
