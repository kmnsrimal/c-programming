#include<stdio.h>

int main()
{   
    float M,sum = 0;
    int i,N;
    printf("Enter:");
    scanf("%d",&N);
	
        for(i=1;i<=N;i++)
	{
		printf("i = %d\n",i);
	    M = 1/(float)i;
	        printf("M = %f\n",M);
		
	    sum = sum + M;
		printf("sum = %f\n",sum);
	}
	
	printf("sum = %f",sum);
}
